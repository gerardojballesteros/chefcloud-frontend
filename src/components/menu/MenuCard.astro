---
const { name, description, price, image } = Astro.props;
---

<li
  class="flex items-center justify-between gap-4 p-4 w-full h-[140px] md:h-[160px] rounded-2xl shadow-md border-card bg-card max-h-[160px]"
>
  <div
    class="flex flex-col justify-between flex-1 align-item sm:h-[100px] md:h-[114px]"
  >
    <h3 class="clamp-1">{name}</h3>

    <p class="text-sm mt-1 mb-1 clamp-2 text-skin-muted leading-snug">
      {description}
    </p>

    <h3 class="">
      {
        new Intl.NumberFormat("es-CL", {
          style: "currency",
          currency: "CLP",
        }).format(price)
      }
    </h3>
  </div>

  {
    image && (
      <img
        src={image}
        alt={name}
        class=" w-28 h-28 md:w-34 md:h-34  object-cover rounded-xl text-theme-primary"
      />
    )
  }
</li>

<style>
  @reference "../../styles/global.css";

  .clamp-1 {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .clamp-2 {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  @layer components {
    li {
      @apply transition-all duration-200;
    }

    li:hover {
      @apply shadow-lg;
    }
  }

  .bg-card {
    background-color: var(--color-bg-card);
  }

  .border-card {
    border: 1px solid var(--color-border-card);
  }
</style>
